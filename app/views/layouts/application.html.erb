<!DOCTYPE html>
<html>
	<head>
		<title>Shorty</title>
		<%= stylesheet_link_tag 'grid.css', :media => 'screen, projection' %>
		<%= stylesheet_link_tag 'text.css', :media => 'screen, projection' %>
		<%= stylesheet_link_tag 'screen.css', :media => 'screen, projection' %>
		<%= stylesheet_link_tag 'print.css', :media => 'print' %>
		<!--[if IE]><%= stylesheet_link_tag 'ie.css', :media => 'screen, projection' %><![endif]-->
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<body class="one-column">
		<div id="wrapper">
			<div id="header">
				<span class="banner">Shorty</span> <span class="subtitle">A quick and easy URL shortener</span>
			</div>
			<div id="main-content">
				<%= yield %>
			</div>
			<div id="footer">
				&copy; 2011 Shorty - <a href="http://www.opensource.org/licenses/mit-license.php">License</a>
			</div>
		</div>
	</body>
</html>
